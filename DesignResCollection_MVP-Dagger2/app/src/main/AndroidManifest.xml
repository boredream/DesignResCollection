            </intent-filter>
        </activity>
        <activity android:name=".ui.register.RegisterStep1Activity" />
        <activity android:name=".ui.register.RegisterStep2Activity" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity android:name=".ui.SettingActivity" />
        <activity android:name=".ui.AboutActivity" />
        <activity android:name=".ui.userinfoedit.UserInfoEditActivity" />
        <activity android:name=".ui.modifytext.ModifyTextActivity" />
        <activity android:name=".ui.feedback.FeedBackActivity" />
        <activity
            android:name=".ui.login.Main2Activity"
